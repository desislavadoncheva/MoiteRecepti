@model MoiteRecepti.Web.ViewModels.Recipes.CreateRecipeInputModel
@{
    this.ViewData["Title"] = "Add new Recipe";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}
<h1> @this.ViewData["Title"] </h1>
<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions" class="form-control" rows="5"> </textarea>
        <span asp-validation-for="Instructions"></span>
    </div>
    <div class="form-group">
        <label asp-for="PreparationTime"></label>
        <textarea asp-for="PreparationTime" class="form-control" rows="5"> </textarea>
        <span asp-validation-for="PreparationTime"></span>
    </div>
    <div class="form-group">
        <label asp-for="CookingTime"></label>
        <textarea asp-for="CookingTime" class="form-control" rows="5"> </textarea>
        <span asp-validation-for="CookingTime"></span>
    </div>
    <div class="form-group">
        <label asp-for="PortionsCount"></label>
        <textarea asp-for="PortionsCount" class="form-control" rows="5"> </textarea>
        <span asp-validation-for="PortionsCount"></span>
    </div>
     <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"> </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div id="IngredientsContainer">
        <label asp-for="Ingredients"></label>
        <a class="btn btn-success" onclick="AddMoreIngredients()">Add</a>        
    </div>
    <input type="submit" class="btn btn-primary"/>
</form>

@section Scripts{
    <script>
    var ingredientIndex = 0;
    function AddMoreIngredients()
    {
        $("#IngredientsContainer").append("<div class='form-control'> Name: <input type='text' name = 'Ingredients["+ingredientIndex+"].IngredientName' /> Quantity: <input type='text' name = 'Ingredients["+ingredientIndex+"].Quantity' /> </div>");
        ingredientIndex++;
    }
</script>
}

